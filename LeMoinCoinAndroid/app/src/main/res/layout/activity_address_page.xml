<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="lemoin.lemoincoinandroid.AddressPage">


    <ListView
        android:id="@+id/main_listview"
        android:layout_width="0dp"
        android:layout_height="401dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/imgMoustache"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


    </ListView>



    <Button
        android:id="@+id/btnMainPage2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:background="@color/colorPrimary"
        android:fontFamily="roboto light"
        android:text="Main Page"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toStartOf="@+id/btnAddressPage2"
        app:layout_constraintTop_toTopOf="@+id/btnAddressPage2" />

    <Button
        android:id="@+id/btnAddressPage2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="36dp"
        android:background="@color/colorPrimary"
        android:fontFamily="roboto light"
        android:text="Addressbook"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/imgMoustache"
        app:layout_constraintTop_toTopOf="@+id/imgMoustache" />

    <ImageView
        android:id="@+id/imgMoustache"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="408dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textMoustache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="68dp"
        android:text="LeMoin Coin"
        app:layout_constraintEnd_toEndOf="@+id/imgMoustache"
        app:layout_constraintTop_toTopOf="@+id/imgMoustache" />



</android.support.constraint.ConstraintLayout>
